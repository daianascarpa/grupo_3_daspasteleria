<!DOCTYPE html>
<html lang="en">
    <%- include ('./partials/head', {titulo}) %> 
    <link rel="stylesheet" href="/styles/index.css">

<body>
    <!-- arranca el header  -->
    <%- include ('./partials/header') %> 
    <div class="main-body">
        <div class="container-img">
            <ul class="slider">
                <li id="slide1"> 
                <img src="/img/lemon_pie_arandanos1.jpg" class="slide-img">
                </li>
                <li id="slide2"> 
                <img src="/img/cheesecake_1.jpg" class="slide-img">
                </li>
                <li id="slide3"> 
                <img src="/img/apple_crumble1.jpg" class="slide-img">
                </li>
          </ul>
          <ul class="h-menu-dots">
              <li>
                  <a href="#slide1"> <i class="fa-solid fa-circle"></i></a>
              </li>
              <li>
                <a href="#slide2"> <i class="fa-solid fa-circle"></i></a>
              </li>
              <li>
                <a href="#slide3"> <i class="fa-solid fa-circle"></i></a>
              </li>
            </ul>
        </div>
    </div>
    <main>
        <section class="prod-destacados">
        <h4>PRODUCTOS DESTACADOS</h4>
        <div class="productos">
          <% for ( product of products) { %> 
          <article>
              <div class="cont-img-card">
              <img src="/img/<%=product.image%> " alt="<%=product.product_name%>" class="prod-img">
              </div>
              <div class="pie-articulo"> 
                <i class="fa-regular fa-heart"></i>
                <h4 class="descripcion"><a href= "Productos/<%=product.id%>"><%=product.product_name%> </a></h4>
                <p class="precio">$<%=product.price_1%></p>
                <div class="agregar-carrito">
                    <h5>Agregar al Carrito</h5>
                </div>
              </div>
          </article>
        <%}%>
        <!--  ELIMINAR  -->
        <article>
              <div class="cont-img-card">
                <img src="/img/chocotorta1.jpg" alt="Chcocotorta" class="prod-img">
              </div>
              <div class="pie-articulo"> 
                <i class="fa-regular fa-heart"></i>
                <h4 class="descripcion">Chocotorta</h4>
                <p class="precio">$000</p>
                <div class="agregar-carrito">
                    <h5>Agregar al Carrito</h5>
                </div>
              </div>
          </article>
          <article>
              <div class="cont-img-card">
              <img src="/img/lemon_pie_arandanos1.jpg" alt="Lemon Pie Arandanos" class="prod-img">
              </div>
              <div class="pie-articulo"> 
                <i class="fa-regular fa-heart"></i>
                <h4 class="descripcion">Lemon Pie</h4>
                <p class="precio">$000</p>
                <div class="agregar-carrito">
                    <h5>Agregar al Carrito</h5>
                </div>
              </div>
          </article>
          <article>
              <div class="cont-img-card">
                <img src="/img/apple_crumble1.jpg" alt="Apple Crumble" class="prod-img">
              </div>
              <div class="pie-articulo"> 
                <i class="fa-regular fa-heart"></i>
                <h4 class="descripcion">Apple Crumble</h4>
                <p class="precio">$000</p>
                <div class="agregar-carrito">
                    <h5>Agregar al Carrito</h5>
                </div>
              </div>
          </article>
        </div>
        </section>
      <!--  ELIMINAR  -->

        <div class="mas-productos">
            <a href="/Productos"> <h5>Ver más Productos</h5> </a>
        </div>
        <div class="main-banner">
            <div class="container-icons">
                <ul class="icons">
                    <li id="icon1"> 
                      <i class="fa-solid fa-mobile-screen-button"></i>
                      <p>Consultas y Pedidos <br>1122334455</p>
                    </li>
                    <li id="icon2"> 
                      <i class="fa-solid fa-motorcycle"></i>
                      <p>Envíos<br>CABA y GBA</p>
                    </li>
                    <li id="icon3"> 
                      <i class="fa-regular fa-credit-card"></i>
                      <p>Medios de Pago<br>Tarjeta, MercadoPago<br>y Efectivo</p>
                    </li>
                    <li id="icon4"> 
                        <i class="fa-solid fa-lock"></i>
                        <p>Compra Segura</p>
                      </li>
              </ul>
              <ul class="banner-dots">
                  <li>
                      <a href="#icon1"> <i class="fa-solid fa-circle"></i></a>
                  </li>
                  <li>
                    <a href="#icon2"> <i class="fa-solid fa-circle"></i></a>
                  </li>
                  <li>
                    <a href="#icon3"> <i class="fa-solid fa-circle"></i></a>
                  </li>
                  <li>
                    <a href="#icon4"> <i class="fa-solid fa-circle"></i></a>
                  </li>
                </ul>
            </div>
        </div>
    </main>
    <%- include ('./partials/footer') %> 
</body>
</html>
